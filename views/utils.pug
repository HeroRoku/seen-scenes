mixin field(labelText, fieldName, fieldType = "text", className)
   div
      label(for=fieldName)=labelText
      input(type=fieldType id=fieldName name=fieldName class="form-control")

mixin validationErrorSummary(errors)
   div
      p 🖐🏻 🖐🏼 🖐🏽 🖐🏾 🖐🏿
      p STOP! The following error(s)
      ul
         each error in errors
            li=error
