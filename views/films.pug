extends layout

append head
  link(rel="stylesheet" href="/stylesheets/index.css")  
  link(rel="stylesheet" href="/stylesheets/films.css")
  script(src="/javascripts/index.js" type="module" defer)

block content
  body
    h1 
    div.filmContainer
      each film in films
        div.filmBlock
          a(href=`/films/${film.id}`)
            img.filmPoster(src= film.posterPath)


